<%- include("partials/header.ejs") %>
<!-- body code continue -->
<% if (data.length == 0) { %>
    <h1>No blog post</h1>
    <% }else{%> <% for (let i = 0; i < data.length; i++) { %>
    <h2><%= data[i].title %></h2>
    <p><%= data[i].content %></p>
    <p>Tags: <%= data[i].tags %></p>
    <p>Date: <%= data[i].date %></p>
    
    <!-- Form to Update the Post -->
    <form action="/v1/update" method="POST">
      <input type="hidden" name="title" value="<%= data[i].title %>" />
      <!-- Existing title to identify the post -->
      <input
        type="text"
        name="newTitle"
        placeholder="New Title"
        value="<%= data[i].title %>"
      />
      <input
        type="text"
        name="newTags"
        placeholder="New Tags"
        value="<%= data[i].tags %>"
      />
      <input
        type="text"
        name="newContent"
        placeholder="New Content"
        value="<%= data[i].content %>"
      />
      <input type="submit" value="Update" />
    </form>
    
    <!-- Form to Delete the Post -->
    <form action="/v1/delete" method="POST" style="margin-top: 10px">
      <input type="hidden" name="title" value="<%= data[i].title %>" />
      <!-- Existing title to identify the post -->
      <input type="submit" value="Delete" />
    </form>
    <% } %> <%} %>
<!-- body code end -->
<%- include("partials/footer.ejs") %>